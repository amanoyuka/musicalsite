
<h3>作品詳細</h3>

<div class="musical">
  <p><%= @musical.name %></p>
  <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= find_youtube_url(@musical.youtube_url) %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <% if user_signed_in? %>
      <% if current_user.already_liked?(@musical) %>
        <%= link_to musical_like_path(@musical), method: :delete do %>
          <i class="fas fa-heart fa-1x" style="color:red;">
          <%= @musical.likes.count %></i>
        <% end %>
      <% else %>
        <%= link_to musical_likes_path(@musical), method: :post do %>
          <i class="fas fa-heart fa-1x" style="color:gray;"></i><%= @musical.likes.count %>
        <% end %>
      <% end %>
    <% else %>
     <i class="fas fa-heart fa-1x" style="color:red;"><%= @musical.likes.count %>
    <% end %>
  <%= link_to edit_musical_path(@musical.id) do %>
    <i class="fa-regular fa-pen-to-square"></i><p>編集</p>
  <% end %>

  <%= link_to "一覧ページに戻る", musicals_path %>

  <% @musical.tags.each do |tag| %>
    <span><%= tag.name %></span>
  <% end %>
  


<h4>いいねしたユーザー</h4>
<% @musical.liked_users.each do |user| %>
  <li><%= user.name %></li>
<% end %>

<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.name unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
      
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@musical, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
        <%= button_tag type: "submit" do %>
          <i class="far fa-comments"></i> コメントする
        <% end %>
      <% end %>
    <% end %>
  </div>

  
</div>
 

 