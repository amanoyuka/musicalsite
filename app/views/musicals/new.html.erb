<h1>Musical作品・感想紹介サイト</h1>
<h3>作品の投稿をしよう！</h3>

<%= form_for(@musical) do |f| %>
  <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>

    <div class="field">
      <%= f.label :"作品名" %>
      <%= f.text_field :name, :size => 30 %>
    </div>

    <div class="field">
      <%= f.label :"みんなに見どころを伝えよう！"  %>
      <%= f.text_area :point, :size => "30x2" %>
    </div>
    
    <%= f.label :youtube_url %>
    <%= f.text_field :youtube_url, :size => 140 %>

    <%= f.submit "作品に関する投稿をする" %>
  
<% end %>

<%= link_to "一覧ページに戻る", :controller => "musicals", :action => "index" %>